
{
  "name": "mstore-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "setup:ui": "npm run lint && npm run typecheck && npm run test:ui",
    "test": "vitest run --reporter=verbose",
    "test:ui": "playwright test",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --cache --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "doctor": "npm-run-all lint typecheck test",
    "doctor:ci": "npm run doctor && npm run build:storybook",
    "fix": "node scripts/fix-project.mjs",
    "sync:push": "git pull --rebase origin main && git push -u origin main"
  },
  "dependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@testing-library/react": "^15.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-react": "^8.2.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.44.0",
    "postcss": "^8.4.36",
    "prettier": "^3.4.0",
    "storybook": "^8.0.0",
    "tailwindcss": "^4.1.2",
    "typescript": "^5.5.2",
    "vite": "^6.0.0",
    "vitest": "^2.0.4"
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 edge versions",
    "last 2 firefox versions",
    "last 2 safari versions"
  ]
}
