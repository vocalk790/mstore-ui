{
  "name": "mstore-ui",
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "setup:ui": "npm run lint && npm run typecheck && npm run test:ui",
    "test": "vitest run --reporter=verbose",
    "test:ui": "playwright test",
    "lint": "npx eslint \"src/**/*.{ts,tsx}\" --cache --fix",
    "typecheck": "npx tsc -p tsconfig.json --noEmit",
    "doctor": "npx npm-run-all --serial lint typecheck test",
    "doctor:ci": "npm run doctor && npm run build:storybook",
    "fix": "node scripts/fix-project.mjs",
    "sync:push": "git pull --rebase origin main && git push -u origin main",
    "auto-fix-push": "node scripts/auto-fix-and-push.mjs"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
